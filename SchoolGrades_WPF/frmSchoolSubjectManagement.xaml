<Page x:Class="SchoolGrades_WPF.frmSchoolSubjectManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SchoolGrades_WPF"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="frmSchoolSubjectManagement">

    <Grid Background="PowderBlue">
        <Button x:Name="btnSave" Background="White" Foreground="DarkBlue" Content="Salva" HorizontalAlignment="Left" Margin="709,10,0,0" VerticalAlignment="Top" Height="44" Width="69" RenderTransformOrigin="0.934,0.585"/>
        <Button x:Name="btnAdd" Background="White" Foreground="DarkBlue" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Height="44" Width="54" Margin="487,10,0,0" RenderTransformOrigin="0.016,2.322"/>
        <Button x:Name="btnErase" Background="White" Foreground="DarkBlue" Content="-" HorizontalAlignment="Left" Margin="556,10,0,0" VerticalAlignment="Top" Height="44" Width="54"/>
        <DataGrid x:Name="DgwSubjects" Background="Gray" d:ItemsSource="{d:SampleData ItemCount=0}" Margin="10,63,90,10"/>
        <Image x:Name="picSubjectColor" HorizontalAlignment="Left" Height="64" Margin="728,63,0,0" VerticalAlignment="Top" Width="62"/>
    </Grid>
</Page>
